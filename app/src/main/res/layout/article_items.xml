<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_left"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    card_view:contentPadding="5dp"
    card_view:cardElevation="6dp"
    card_view:cardMaxElevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="90"
                android:fontFamily="@font/calibri"
                android:text="Abu Paul"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/post_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="@drawable/light_orange_rounded_shape"
                android:drawableLeft="@drawable/ic_star_yellow_24dp"
                android:fontFamily="@font/calibri"
                android:padding="6dp"
                android:text="Voter/Civic Education"
                android:textAlignment="textEnd"
                android:textColor="#ffc32d"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp">
            <TextView
                android:id="@+id/post_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:text="29/10/2022"
                android:layout_alignParentStart="true"
                android:textColor="#a4a7b5"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/post_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:text="Osun"
                android:layout_alignParentStart="true"
                android:layout_marginStart="80dp"
                android:textColor="#a4a7b5"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/post_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:text="Focused"
                android:layout_alignParentEnd="true"
                android:textColor="#a4a7b5"
                android:textSize="14sp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16sp"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_action_heart" />

            <TextView
                android:id="@+id/post_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:fontFamily="@font/calibri"
                android:text="5"
                android:textColor="#000000"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16sp"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_action_comment" />

            <TextView
                android:id="@+id/post_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:fontFamily="@font/calibri"
                android:text="4"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <TextView
                android:id="@+id/vid_rscurl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/user_imageurl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/post_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/post_statusflag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img" />
        <TextView
            android:id="@+id/articleSnippet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:maxLength="50"
            android:ellipsize="end"
            android:text="Love is just a Chemical Reaction that compels animals to breed by Enoch"
            android:padding="5dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>

