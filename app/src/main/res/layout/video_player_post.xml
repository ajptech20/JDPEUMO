<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Video_post_player">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="18dp">

    <com.bambuser.broadcaster.SurfaceViewWithAutoAR
        android:id="@+id/VideoSurfaceView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_centerInParent="true" />

        <!--<androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">
            <com.bambuser.broadcaster.SurfaceViewWithAutoAR
                android:id="@+id/VideoSurfaceView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="4:7"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_centerInParent="true" />
        </androidx.constraintlayout.widget.ConstraintLayout>-->
        <RelativeLayout
            android:id="@+id/PlayerContentView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:layout_marginStart="100dp">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="280dp"
            android:layout_marginStart="100dp">

            <ImageView
                android:id="@+id/stop_close_live2"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_baseline_cast_24" />

            <TextView
                android:id="@+id/rep_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:layout_marginTop="18dp"
                android:text=""
                android:layout_marginStart="50dp"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/brstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/calibri"
            android:layout_marginBottom="170dp"
            android:text=""
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:background="@color/colorAccent"
            android:padding="6dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="180dp"
            android:layout_marginStart="125dp">

            <TextView
                android:id="@+id/rep_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:layout_marginTop="18dp"
                android:layout_alignParentStart="true"
                android:text=""
                android:layout_marginStart="10dp"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/vidarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:layout_marginTop="18dp"
                android:text=""
                android:layout_marginStart="60dp"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/report_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:layout_marginTop="18dp"
                android:text=""
                android:layout_marginStart="130dp"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/rep_comment"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:fontFamily="@font/calibri"
            android:layout_marginBottom="70dp"
            android:text=""
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:background="@color/semi_transparent"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/stop_close_live3"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_clear_black_24dp" />

            <TextView
                android:id="@+id/post_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:layout_marginTop="6dp"
                android:text=""
                android:layout_marginStart="50dp"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/poster_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="50dp"
                android:maxLines="1"
                android:maxLength="16"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/reporter_image"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/img"
                app:civ_border_width="2dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                app:civ_border_color="#03A9F4"/>


        </RelativeLayout>

    <TextView android:id="@+id/PlayerStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp"
        android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/play_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:visibility="gone">
            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please wait on network response..."
                android:layout_marginTop="@dimen/activity_margin"
                android:textColor="#FFF"
                android:layout_below="@+id/progress"/>
        </RelativeLayout>

    <!--<SeekBar android:id="@+id/PlayerVolumeSeekBar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:progress="100"
        android:max="100" />-->

    <TextView android:id="@+id/BroadcastLiveTextView"
        android:text="LIVE"
        android:background="#FF0000"
        android:textColor="#FFFFFF"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:visibility="gone" />

    <TextView android:id="@+id/BroadcastLatencyTextView"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/BroadcastLiveTextView"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:visibility="gone" />

    <TextView android:id="@+id/ViewerStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:textSize="20sp" />

    </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="125"
        android:background="#FFFFFF"
        android:layout_gravity="bottom"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/app_home1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/action_settings"
            android:layout_weight="25"
            android:layout_gravity="start"
            android:src="@drawable/ic_action_home"
            />

        <ImageView
            android:id="@+id/image_posts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/action_settings"
            android:layout_weight="25"
            android:layout_gravity="center"
            android:src="@drawable/ic_apps_black_24dp"
            />

        <ImageView
            android:id="@+id/short_videos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/action_settings"
            android:layout_weight="25"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_subscriptions_24"
            />
        <ImageView
            android:id="@+id/view_live_posts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/action_settings"
            android:layout_weight="25"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_name"
            />
        <ImageView
            android:id="@+id/new_post"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:contentDescription="@string/action_settings"
            android:layout_gravity="center"
            android:src="@drawable/ic_control_point_black_24dp"
            />
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/post_new_image"
        style="@style/Widget.Design.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        app:elevation="6dp"
        android:layout_marginBottom="230dp"
        android:layout_marginEnd="20dp"
        app:backgroundTint="#3F51B5"
        app:srcCompat="@drawable/ic_baseline_camera_alt_24"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/post_new_short"
        android:layout_width="wrap_content"
        app:backgroundTint="#FF5722"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:contentDescription="@string/app_name"
        app:elevation="6dp"
        android:layout_marginBottom="160dp"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/ic_baseline_video_file_24"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/go_live_stream"
        style="@style/Widget.Design.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        app:elevation="6dp"
        android:layout_marginBottom="90dp"
        android:layout_marginEnd="20dp"
        app:backgroundTint="#FF0000"
        app:srcCompat="@drawable/ic_baseline_video_call_24"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button"
        style="@style/Widget.Design.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        app:elevation="6dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/ic_baseline_linked_camera_24"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dim"
        android:alpha="0"
        android:fitsSystemWindows="true"
        android:background="@color/semi_transparent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/slideView"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="@android:color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Type of Post"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/darker_gray"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/new_stream"
        android:orientation="vertical"
        android:layout_marginBottom="50dp"
        android:background="@android:color/white">


    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
