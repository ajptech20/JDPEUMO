<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    tools:context=".AppSettings">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">
    <android.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:theme="@style/AppTheme.Toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:text="SETTING"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/very_progress_bar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="90dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/close_settings"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/met_ic_close" />
            <ImageView
                android:id="@+id/my_notification"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="85dp"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
        </LinearLayout>
    </android.widget.Toolbar>
</com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="4dp"
                    android:layout_margin="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/unconfirmed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/calibri"
                            android:padding="5dp"
                            android:text="JUST-WATCHER Personnel's Account Confirmation"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/calibri"
                            android:padding="5dp"
                            android:text="Kindly confirm your account if you are a JUST-WATCHER Personnel"
                            android:textColor="#000000"
                            android:textAlignment="center"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/confirm_me"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Confirm Account"
                            android:textColor="#FFFF"
                            android:padding="10dp"
                            app:cornerRadius="80dp"
                            android:layout_gravity="center"
                            android:background="@android:color/holo_orange_dark"
                            android:textSize="13sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/confirmed_acc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/calibri"
                            android:padding="5dp"
                            android:text="JUST-WATCHER Personnel's Account Confirmed"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/calibri"
                            android:padding="5dp"
                            android:text="Your account has been confirmed as JUST-WATCHER volunteer. Kindly note that all posts from your account are treated as genuine and you shall be severely prosecuted if discovered you share any fake news or information on this mobile application. Please be guided."
                            android:textColor="#000000"
                            android:textAlignment="center"
                            android:textSize="14sp" />
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Account Confirmed"
                            android:textColor="#FFFF"
                            android:padding="10dp"
                            app:cornerRadius="80dp"
                            android:layout_gravity="center"
                            android:background="@color/colorPrimary"
                            android:textSize="13sp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="4dp"
                    android:layout_margin="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="8dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/user_image"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/img"
                                app:civ_border_width="2dp"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="0dp"
                                app:civ_border_color="#03A9F4"/>

                            <TextView
                                android:id="@+id/user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:fontFamily="@font/calibri"
                                android:padding="5dp"
                                android:layout_marginStart="50dp"
                                android:text="Abu James Paul"
                                android:maxLines="1"
                                android:maxLength="10"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/user_state"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/calibri"
                                android:padding="5dp"
                                android:layout_marginEnd="100dp"
                                android:text="Ekiti"
                                android:maxLines="1"
                                android:maxLength="10"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textSize="14sp" />
                            <TextView
                                android:id="@+id/user_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:fontFamily="@font/calibri"
                                android:padding="5dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginStart="50dp"
                                android:text="08026265324"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/user_lga"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/calibri"
                                android:padding="5dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="75dp"
                                android:text="Ado Ekiti"
                                android:maxLines="1"
                                android:maxLength="10"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/edit_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/calibri"
                                android:padding="10dp"
                                android:src="@drawable/ic_settings_black_24dp" />

                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="4dp"
                    android:layout_margin="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/about_us"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:fontFamily="@font/calibri"
                                android:padding="5dp"
                                android:text="About"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/calibri"
                                android:padding="5dp"
                                android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>

                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/privacy_policy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:fontFamily="@font/calibri"
                                android:padding="5dp"
                                android:text="Privacy Policy"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textSize="18sp" />
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/calibri"
                                android:padding="5dp"
                                android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>

                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rate_us"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:fontFamily="@font/calibri"
                                android:padding="5dp"
                                android:text="Rate this app"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textSize="18sp" />
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/calibri"
                                android:padding="5dp"
                                android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>

                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/term_and_con"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:fontFamily="@font/calibri"
                                android:padding="5dp"
                                android:text="Terms"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/calibri"
                                android:padding="5dp"
                                android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>

                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/faq_questions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:fontFamily="@font/calibri"
                                android:padding="5dp"
                                android:text="FAQ"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textSize="18sp" />
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/calibri"
                                android:padding="5dp"
                                android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>

                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="4dp"
                    android:layout_margin="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:id="@+id/privacy_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Privacy Policy"
                                android:textSize="15dp"
                                android:padding="5dp"
                                android:textColor="#000000"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/jdprivacy"
                                android:padding="5dp"
                                android:layout_marginTop="25dp"
                                android:textSize="14dp"
                                android:justificationMode="inter_word"
                                android:lineSpacingExtra="5dp"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/terms_text">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Terms of Service"
                                android:textSize="15dp"
                                android:padding="5dp"
                                android:textColor="#000000"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/terms_ncondition"
                                android:padding="5dp"
                                android:justificationMode="inter_word"
                                android:lineSpacingExtra="5dp"
                                android:textSize="16dp"
                                android:layout_marginTop="25dp"
                                />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/faq_text"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Frequently Asked Questions"
                                android:textSize="15dp"
                                android:padding="5dp"
                                android:textColor="#000000"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/faqtext"
                                android:padding="10dp"
                                android:justificationMode="inter_word"
                                android:lineSpacingExtra="5dp"
                                android:lineHeight="30dp"
                                android:textSize="16dp"
                                android:layout_marginTop="25dp"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/rate_us_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pleas give us a 5 star Rating"
                            android:textSize="14dp"
                            android:padding="5dp"
                            android:textColor="#000000"/>

                        <ImageView
                            android:id="@+id/star_1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentStart="true"
                            android:padding="5dp"
                            android:layout_marginTop="25dp"/>
                        <ImageView
                            android:id="@+id/star_2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="80dp"
                            android:padding="5dp"
                            android:layout_marginTop="25dp"/>
                        <ImageView
                            android:id="@+id/star_3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="160dp"
                            android:padding="5dp"
                            android:layout_marginTop="25dp"/>
                        <ImageView
                            android:id="@+id/star_4"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="80dp"
                            android:padding="5dp"
                            android:layout_marginTop="25dp"/>
                        <ImageView
                            android:id="@+id/star_5"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:padding="5dp"
                            android:layout_marginTop="25dp"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="4dp"
                    android:layout_margin="@dimen/activity_margin"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:id="@+id/rate_comment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <EditText
                                android:id="@+id/my_comment"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="text"
                                android:padding="10dp"
                                android:textColor="@color/black"
                                android:hint="Add a comment to complete your rating" />

                            <TextView
                                android:id="@+id/rate_string"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                android:visibility="gone"
                                android:textColor="@color/black" />

                            <Button
                                android:id="@+id/ratebtn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorPrimary"
                                android:layout_alignParentEnd="true"
                                android:padding="5dp"
                                android:textColor="@color/colorButtonNormal"
                                android:text="Rate App"
                                android:layout_marginTop="50dp"/>

                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>