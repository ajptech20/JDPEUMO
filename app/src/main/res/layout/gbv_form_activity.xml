<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    tools:context=".Gbv_form_Activity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/select_image"
                android:layout_width="match_parent"
                android:layout_height="250dp">
                <ImageView
                    android:id="@+id/image_header"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/holo_blue_dark"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gbv_pic"/>
                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/close_form"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:fontFamily="@font/calibri"
                    android:text="Close"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/form"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/select_image"
                android:paddingTop="30dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginTop="8dp"
                    android:textColorHint="@color/black"
                    app:errorEnabled="true">
                    <EditText
                        android:id="@+id/witness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:hint="Total Number of Witnesses" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginTop="8dp"
                    app:errorEnabled="true">
                    <EditText
                        android:id="@+id/victim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:hint="Name of Victim" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginTop="8dp"
                    app:errorEnabled="true">
                    <EditText
                        android:id="@+id/add_of_victim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="Address of Victim" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginTop="8dp"
                    app:errorEnabled="true">
                    <EditText
                        android:id="@+id/victim_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="Enter Phone Number of Victim if Any" />
                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:id="@+id/rep_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/gbv_form_option"
                    android:hint="Select Here"
                    android:padding="10dp"
                    android:textSize="14dp"/>
                <Spinner
                    android:id="@+id/option_physical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/gbv_form_physical_option"
                    android:hint="Select Here"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:textSize="14dp"/>
                <Spinner
                    android:id="@+id/option_sexual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/gbv_form_sexual_option"
                    android:hint="Select Here"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:textSize="14dp"/>
                <Spinner
                    android:id="@+id/option_emotional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/gbv_form_option_emotional"
                    android:hint="Select Here"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:textSize="14dp"/>
                <Spinner
                    android:id="@+id/option_socio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/gbv_form_option_socio"
                    android:hint="Select Here"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:textSize="14dp"/>
                <Spinner
                    android:id="@+id/option_harmful"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/gbv_form_option_harmful"
                    android:hint="Select Here"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:textSize="14dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginTop="8dp"
                    app:errorEnabled="true">
                    <EditText
                        android:id="@+id/gen_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="General Comment" />
                </com.google.android.material.textfield.TextInputLayout>

